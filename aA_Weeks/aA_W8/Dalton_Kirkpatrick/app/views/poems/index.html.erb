<h1>All Poems</h1>

<div>
    <ul>
        <a href="<%= new_poem_url %>">Create New Poem</a>
        <% @poems.each do |poem| %>

         <li><%= poem.title %></li>
        <%= poem.stanzas %>
        <% if poem.complete %>
            <p>Done</p>
        <% end%>
        
        <a href="<%= edit_poem_url(poem) %>">Edit Poem</a>
        <% end %>
    </ul>

</div>

